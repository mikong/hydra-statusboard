= form_for [:admin, @announcement], html: {class: 'form-horizontal'} do |f|

  = render partial: 'shared/form_errors', locals: { resource: @announcement }

  .form-group
    = f.label :body, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.text_field :body, class: 'form-control'

  .form-group
    = f.label :emoji, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.select :emoji, [f.object.emoji], {}, { style: 'width: 50%' }

  .form-group
    .col-sm-offset-2.col-sm-10
      = f.submit class: 'btn btn-primary'
      = link_to 'Back to List', admin_announcements_path, class: 'btn btn-secondary'
