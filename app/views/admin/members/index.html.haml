%h2 All Members

= link_to 'New Member', new_admin_member_path

%table.table
  %thead
    %tr
      %th Name
      %th Initials
      %th Actions
  %tbody
    - @members.each do |member|
      %tr
        %td= member.name
        %td= member.initials
        %td
          = link_to 'Show', admin_member_path(member)
          = link_to 'Edit', edit_admin_member_path(member)
          = link_to 'Delete', admin_member_path(member), method: :delete, data: { confirm: 'Are you sure?' }
