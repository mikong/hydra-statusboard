%header.clearfix
  .float-right
    = link_to 'Edit Group', edit_admin_group_path(@group), class: 'btn btn-primary'
  %h1.display-4 Group

%dl.row
  %dt.col-sm-1 Name
  %dd.col-sm-11= @group.name

  %dt.col-sm-1 Color
  %dd.col-sm-11
    %span.badge.color-hex{style: "background-color: #{@group.color}"}= @group.color

  %dt.col-sm-1 Initials
  %dd.col-sm-11= @group.initials

%h5 Members:
%ul.list-unstyled
  - @members.each do |member|
    %li
      = link_to_member(member)

%h5 Projects:
%ul.list-unstyled
  - @projects.each do |project|
    %li
      = link_to project.name, [:admin, project]

= link_to 'Back to List', admin_groups_path, class: 'btn btn-secondary'
